import type { Prisma, PackPrice } from "@/prisma/generated";

export const createPackPriceMock = (
  packId: string = "658dcfa6bc70422ea10cba530ddc71bc",
  overrides: Partial<Prisma.PackPriceCreateInput> = {},
): Prisma.PackPriceCreateInput => ({
  price: 480,
  minQuantity: 1,
  maxQuantity: 9,
  pack: {
    connect: { id: packId },
  },
  tenant: {
    connect: { id: "default-tenant" },
  },
  ...overrides,
});

export const createPackPriceMockWithId = (
  overrides: Partial<PackPrice> = {},
): PackPrice => ({
  id: 1,
  packId: "658dcfa6bc70422ea10cba530ddc71bc",
  price: 480,
  minQuantity: 1,
  maxQuantity: 9,
  tenantId: "default-tenant",
  createdAt: new Date(),
  updatedAt: new Date(),
  ...overrides,
});

