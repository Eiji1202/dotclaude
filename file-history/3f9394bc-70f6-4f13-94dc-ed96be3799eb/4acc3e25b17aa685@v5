import type { Prisma, PaymentMethod } from "@/prisma/generated";
import { PaymentMethodType } from "@/prisma/generated";

export const createPaymentMethodMock = (
  userId: string = "test-user-id",
  overrides: Partial<Prisma.PaymentMethodCreateInput> = {},
): Prisma.PaymentMethodCreateInput => ({
  type: PaymentMethodType.CARD,
  cardId: "test-card-id",
  cardNo: "************1234",
  cardBrand: "VISA",
  user: {
    connect: { id: userId },
  },
  tenant: {
    connect: { id: 1 },
  },
  ...overrides,
});

export const createPaymentMethodMockWithId = (
  overrides: Partial<PaymentMethod> = {},
): PaymentMethod => ({
  id: 1,
  userId: "test-user-id",
  type: PaymentMethodType.CARD,
  cardId: "test-card-id",
  cardNo: "************1234",
  cardBrand: "VISA",
  tenantId: 1,
  createdAt: new Date(),
  updatedAt: new Date(),
  ...overrides,
});

